<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Light_Grey"
    tools:context="aakoCalculator.MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:hint="@string/resultTextViewHint"
        android:textColorHint="#0097A7"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/eraseLeftBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/eraseLeft"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/number0BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number0BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif"
        android:onClick="onClick"
        android:text="@string/number_0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pointBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eraseLeftBTN"
        app:layout_constraintTop_toTopOf="@+id/eraseLeftBTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pointBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif"
        android:onClick="onClick"
        android:text="@string/point"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/enterBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number0BTN"
        app:layout_constraintTop_toTopOf="@+id/number0BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/enterBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/enter"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pointBTN"
        app:layout_constraintTop_toTopOf="@+id/pointBTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number1BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_1"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/eraseLeftBTN"
        app:layout_constraintEnd_toStartOf="@+id/number2BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number2BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_2"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number0BTN"
        app:layout_constraintEnd_toStartOf="@+id/number3BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number1BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number3BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_3"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/pointBTN"
        app:layout_constraintEnd_toStartOf="@+id/plusBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number2BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/plusBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/additionSign"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/enterBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number3BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number4BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_4"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number1BTN"
        app:layout_constraintEnd_toStartOf="@+id/number5BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number5BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_5"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number2BTN"
        app:layout_constraintEnd_toStartOf="@+id/number6BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number4BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number6BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_6"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number3BTN"
        app:layout_constraintEnd_toStartOf="@+id/minusBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number5BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/minusBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/minusSign"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/plusBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number6BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number7BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_7"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number4BTN"
        app:layout_constraintEnd_toStartOf="@+id/number8BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number8BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_8"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number5BTN"
        app:layout_constraintEnd_toStartOf="@+id/number9BTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number7BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/number9BTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/number_9"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number6BTN"
        app:layout_constraintEnd_toStartOf="@+id/multiplyBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number8BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/multiplyBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/multiplySign"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/minusBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/number9BTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/clearAllBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/c"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number7BTN"
        app:layout_constraintEnd_toStartOf="@+id/openParenthesesBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/openParenthesesBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/openParentheses"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number8BTN"
        app:layout_constraintEnd_toStartOf="@+id/closeParenthesesBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/clearAllBTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeParenthesesBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/closeParantheses"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/number9BTN"
        app:layout_constraintEnd_toStartOf="@+id/divisionBTN"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/openParenthesesBTN"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divisionBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/circular_button_1"
        android:fontFamily="sans-serif-light"
        android:onClick="onClick"
        android:text="@string/divisionSign"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/multiplyBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/closeParenthesesBTN"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>